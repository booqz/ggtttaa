<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ALL CHEATS \n\n GTA SAN ANDREAS "
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/category1"
        android:background="@drawable/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/waepon" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Weapons"
            android:textSize="30dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/category2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/header"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/category1"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/pogoda" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Weather"
            android:textSize="30dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/category3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/header"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/category2"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/auto" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Cars"
            android:textSize="30dp" />
    </LinearLayout>


    <LinearLayout
    android:id="@+id/category4"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/header"
    android:orientation="horizontal"
    app:layout_constraintTop_toBottomOf="@+id/category3"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/other" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Other"
        android:textSize="30dp" />
</LinearLayout>



</android.support.constraint.ConstraintLayout>